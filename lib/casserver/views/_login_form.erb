<%# coding: UTF-8 -%>

<form method="post" action="<%= @form_action || "login" %>" id="" onsubmit="submitbutton = document.getElementById('login-submit'); submitbutton.value='<%= t.notice.please_wait %>'; submitbutton.disabled=true; return true;">
  <%#= f.text_field :email, autofocus: true, class: "input_area", placeholder: '用户名' %>
  <%#= f.password_field :password, autocomplete: "off", class: "input_area", placeholder: '密码', style:'margin-top: 10px;' %>
  <input type="text" id="username" name="username" placeholder="用户名" class="input_area" tabindex="1" accesskey="u" />
  <input type="password" id="password" name="password" placeholder="密码" tabindex="2" accesskey="p" class="input_area" autocomplete="off" />
  <input type="hidden" id="lt" name="lt" value="<%= escape_html @lt %>" />
  <input type="hidden" id="service" name="service" value="<%= escape_html @service %>" />
  <input type="hidden" id="from" name="from" value="<%= escape_html @from %>" />
  <input type="submit" class="button" accesskey="l" value="<%= t.button.login %>" tabindex="4" id="login-submit" class="button" />
</form>

